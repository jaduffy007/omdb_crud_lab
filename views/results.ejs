<!doctype html>
<html>
  <head>
    <title>Movie Search Results</title>
  </head>
  <body>
    <ul>
      <!-- Loop over all the films in movieList -->
      <% movieList.forEach(function (film) {%>

      <!-- Only show the results that are movies -->
      <!-- (i.e., do not show TV shows) -->
      <% if (film.Type === "movie") { %>

      <!-- Show the title and the imdbID -->
      <li><%=film.Title%> - <%=film.imdbID%>
      <br>
        <a href="/results/<%=film.imdbID%>"> Learn More...</a>
        <form action="/results/<%=film.imdbID%>" method="POST">
          <input type="hidden" value="<%=film.imdbID%>" name="film[Title]">
          <input type="submit" value="Add to Watchlist">
        </form>
      </li>
      <br>

      <!-- Close the `if` -->
      <% } %>

      <!-- Close the `forEach` -->
      <% }) %>
    </ul>
  </body>
</html>